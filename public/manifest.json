{
  "manifest_version": 3,
  "name": "Medium Navigator",
  "version": "1.0.0",
  "description": "Streamline Your Medium Reading with Easy Navigation! Add this extension for quick, effortless browsing across articles, enhancing your Medium experience.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://medium.com/*/*",
        "https://*.medium.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "css": [
        "style/navigatorStyle.css"
      ],
      "run_at": "document_end"
    }
  ]
}
